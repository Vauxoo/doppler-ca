<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="message_activity_assigned" inherit_id="mail.message_activity_assigned">
        <!-- CHANGE COLOR-->
        <xpath expr="//a[@style='background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;']" position="attributes">
            <attribute name="style" add="background-color:#001e62" remove="background-color:#875A7B" separator="; " />
        </xpath>
    </template>

    <template id="message_user_assigned" inherit_id="mail.message_user_assigned">
        <!-- CHANGE COLOR -->
        <xpath expr="//a[@style='background-color:#875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;']" position="attributes">
            <attribute name="style" add="background-color:#001e62" remove="background-color:#875A7B" separator="; " />
        </xpath>
    </template>
</odoo>
